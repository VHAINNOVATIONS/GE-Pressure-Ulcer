<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal">
<div id="braden-scores-macro-div" metal:define-macro="braden-scores">    
<div id="braden-scores-form-div" title="Braden scores">    
	<p class="validateTips">All form fields are required.</p>
	
	<form name="braden-scores-form" id="braden-scores-form">
		<fieldset>
			<input type="hidden" name="id" value="0" />
			<input type="hidden" name="patient_id" value="0" />
			<label for="braden_scoring_date">Date</label>
			<input type="text" name="braden_scoring_date" id="braden_scoring_date" class="text ui-widget-content ui-corner-all" />
			<label for="sensory_perception_score">Sensory Perception</label>
			<input type="text" name="sensory_perception_score" id="sensory_perception_score" class="text ui-widget-content ui-corner-all" />
			<label for="moisture_score">Moisture</label>
			<input type="text" name="moisture_score" id="moisture_score" class="text ui-widget-content ui-corner-all" />
			<label for="activity_score">Activity</label>
			<input type="text" name="activity_score" id="activity_score" class="text ui-widget-content ui-corner-all" />
			<label for="mobility_score">Mobility</label>
			<input type="text" name="mobility_score" id="mobility_score" class="text ui-widget-content ui-corner-all" />
			<label for="nutrition_score">Nutrition</label>
			<input type="text" name="nutrition_score" id="nutrition_score" class="text ui-widget-content ui-corner-all" />
			<label for="friction_shear_score">Friction Shear</label>
			<input type="text" name="friction_shear_score" id="friction_shear_score" class="text ui-widget-content ui-corner-all" />
			<div id="braden-dialog-msg"></div>
			<!-- Allow form submission with keyboard without duplicating the dialog button -->
			<input type="submit" tabindex="-1" style="position:absolute; top:-1000px">
		</fieldset>
	</form>
</div><!--/#bradenscoresform-->
<div id="braden-scores-delete-div" title="Braden scores deletion confirmation">
	<p>OK to delete this set of Braden scores?</p>
	<div id="braden-delete-dialog-msg"></div>
</div>
</div>
</html>